<% @title = "Showing measure" %>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-md-2 form-label">Name</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measure.name %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Abbreviation</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measure.abbreviation %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Description</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measure.description %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Units</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measure.units %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Value</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measure.value %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Operator</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measure.operator %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Places</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measure.places %>
      </span>
    </div>
  </div>

  <div class="form-actions col-md-offset-2">
    <%= link_to icon_tag("pencil") + ' Edit', edit_measure_path(@measure), class: 'btn btn-primary' %>
    <%= link_to 'Back', measures_path, class: 'btn' %>
  </div>
</div>