
<%= form_for(@measure, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :abbreviation do |f| %>
      <%= f.label :abbreviation, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :abbreviation, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :units do |f| %>
      <%= f.label :units, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :units, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :value do |f| %>
      <%= f.label :value, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :value, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :operator do |f| %>
      <%= f.label :operator, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :operator, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :places do |f| %>
      <%= f.label :places, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :places, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-3 col-md-9">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", measures_path, class: 'btn' %>
  </div>
<% end %>

