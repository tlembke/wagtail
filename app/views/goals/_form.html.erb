
<%= form_for(@goal, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :title do |f| %>
      <%= f.label :title, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :condition_id do |f| %>
      <%= f.label :condition_id, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :condition_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :patient_id do |f| %>
      <%= f.label :patient_id, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :patient_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :measure_id do |f| %>
      <%= f.label :measure_id, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :measure_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :active do |f| %>
      <%= f.label :active, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :active, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :parent do |f| %>
      <%= f.label :parent, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :parent, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-3 col-md-9">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", goals_path, class: 'btn' %>
  </div>
<% end %>

