<% @title = "Listing providers" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Providers/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
  <%= link_to new_provider_path, class: 'btn btn-primary btn-large pull-right' do %>
    <%= icon_tag "plus" %> Add Provider
  <% end %>
<% end %>

<div class="sheet sheet-condensed">
  <div class="sheet-inner">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Organisation</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @providers.each do |provider| %>
        <tr>
          <td><%= provider.full_name %></td>
          <td><%= provider.organisation.name %></td>
          <td class="actions">
            <%= link_to icon_tag("eye"), provider, rel: 'tooltip', title: 'Show' %>
            <%= link_to icon_tag("pencil"), edit_provider_path(provider), rel: 'tooltip', title: 'Edit' %>
            <%= link_to icon_tag("trash-o"), provider, rel: 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete %>
          </td>
        </tr>
      <% end %>
      <% if @providers.length == 0 %>
        <tr><td colspan=42 class='text-center'>No providers.</td></tr>
      <% end %>
      </tbody>
    </table>
  </div><!-- /.sheet-inner -->
</div><!-- /.sheet -->

