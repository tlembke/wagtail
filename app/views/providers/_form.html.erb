
<%= form_for(@provider, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

     <%= render 'craftselect' %>
    <div class="form-group"></div>

    <%= f.form_group :title do |f| %>
      <%= f.label :title, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>


    <%= f.form_group :given_names do |f| %>
      <%= f.label :given_names, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :given_names, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

       <%= f.form_group :family_name do |f| %>
      <%= f.label :family_name, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :family_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>  


        <%= render 'locationselect' %>
        <div class="form-group"></div>
        <div id='locationdiv'>
        <%= render 'location', locals: { items: @organisation }  %>
        </div>



  </div>
 
  <div class="form-actions col-md-offset-3 col-md-9">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", providers_path, class: 'btn' %>
  </div>
<% end %>

