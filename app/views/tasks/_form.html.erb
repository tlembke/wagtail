
<%= form_for(@task, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :title do |f| %>
      <%= f.label :title, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :goal_id do |f| %>
      <%= f.label :goal_id, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :goal_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :person_id do |f| %>
      <%= f.label :person_id, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :person_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :team do |f| %>
      <%= f.label :team, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :team, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :active do |f| %>
      <%= f.label :active, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :active, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :parent do |f| %>
      <%= f.label :parent, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :parent, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :task_type do |f| %>
      <%= f.label :task_type, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :task_type, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-3 col-md-9">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", tasks_path, class: 'btn' %>
  </div>
<% end %>

