
<%= form_for(@measurevalue, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :person_id do |f| %>
      <%= f.label :person_id, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :person_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :measure_id do |f| %>
      <%= f.label :measure_id, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :measure_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :value do |f| %>
      <%= f.label :value, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :value, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :value_date do |f| %>
      <%= f.label :value_date, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.date_select :value_date, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :created_by do |f| %>
      <%= f.label :created_by, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :created_by, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-3 col-md-9">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", measurevalues_path, class: 'btn' %>
  </div>
<% end %>

