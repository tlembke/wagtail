<% @title = "Showing measurevalue" %>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-md-2 form-label">Person</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measurevalue.person_id %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Measure</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measurevalue.measure_id %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Value</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measurevalue.value %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Value date</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measurevalue.value_date %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Created by</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @measurevalue.created_by %>
      </span>
    </div>
  </div>

  <div class="form-actions col-md-offset-2">
    <%= link_to icon_tag("pencil") + ' Edit', edit_measurevalue_path(@measurevalue), class: 'btn btn-primary' %>
    <%= link_to 'Back', measurevalues_path, class: 'btn' %>
  </div>
</div>