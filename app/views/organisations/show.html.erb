<% @title = "Showing organisation" %>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-md-2 form-label">Name</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @organisation.name %>
      </span>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 form-label">Address line</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @organisation.address_line %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Address line 2</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @organisation.address_line_2 %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Town</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @organisation.town %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">State</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @organisation.state %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Postcode</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @organisation.postcode %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Phone</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @organisation.phone %>
      </span>
    </div>
  </div>

  <div class="form-actions col-md-offset-2">
    <%= link_to icon_tag("pencil") + ' Edit', edit_organisation_path(@organisation), class: 'btn btn-primary' %>
    <%= link_to 'Back', organisations_path, class: 'btn' %>
  </div>
</div>